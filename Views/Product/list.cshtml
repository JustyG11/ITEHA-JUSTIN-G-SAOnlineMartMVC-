@model IEnumerable<SAOnlineMartMVC.Models.Product>

@{
    ViewData["Title"] = "Product List";
}

<div class="product-page">
    <h1 class="page-title">Our Products</h1>
    <div class="product-grid">
        @foreach (var product in Model)
        {
            <div class="product-card">
                <h2 class="product-name">@product.Name</h2>
                <p class="product-description">@product.Description</p>
                <p class="product-price">@String.Format(new System.Globalization.CultureInfo("en-ZA"), "{0:C}", product.Price)</p>
                <p class="product-stock">Stock: @product.Stock</p>
                <a href="@Url.Action("Details", "Product", new { id = product.Id })" class="btn btn-details">View Details</a>
            </div>
        }
    </div>
</div>
